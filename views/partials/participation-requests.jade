.panel.panel-warning(ng-controller="participationRequestsController as prCtrl")
	.panel-heading
		h3.panel-title= __('Participation requests')
	.panel-body(ng-show="participationRequests.length == 0")
		p= __('You currently have no participation requests')
	ul.list-group
		li.list-group-item(ng-repeat="pr in participationRequests") #{__('From')} : {{pr.from.first_name}} {{pr.from.last_name}} #[br] #{__('Loodle')} : {{pr.loodle.name}} #[br] #[br]
			form(method="GET" action="{{'/participation-request/' + pr.id + '/accept'}}")
				button(class="btn btn-primary")= __('Access')